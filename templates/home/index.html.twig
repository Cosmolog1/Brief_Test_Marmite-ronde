{% extends 'base.html.twig' %}

{% block title %}Acceuil{% endblock %}

{% block body %}

<br>
<div class="container-fluid">

<div class="row">
    {% for recipe in recipe %}
    <div class="col-lg-4 col-md-6">
        <div class="card">
            <img src="{{ asset(recipe.image) }}" alt="{{ recipe.title }}">
            <div class="card-body">
                <p class="card-text">Ingredient : {{  recipe.ingredient}}  (Difficult: {{  recipe.difficult}})</p>
                <a href="{{ path('shop_category', {id:club.league.id}) }}" class="btn btn-primary" target="_blank">{{ club.league.label }}</a>
                <a href="{{ path('shop_single', {id:club.id}) }}" class="btn btn-primary" target="_blank">Maillot : {{ club.label }}</a>
            </div>
        </div>
    </div>
    {% endfor %}
</div>
</div>

{% endblock %}
